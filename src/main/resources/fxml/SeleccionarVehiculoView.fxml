<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<AnchorPane id="AnchorPane" styleClass="mainFxmlClass" prefHeight="900.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SeleccionarVehiculoController">
    <stylesheets>
        <URL value="@/CSS/VeiculosView.css" />
        <URL value="@/CSS/VendedorView.css" />
        <URL value="@/CSS/seleccionar.css" />
        <URL value="@/CSS/estilos.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Seleccionar Vehículo Disponible" />
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <Label text="Buscar:" />
                    <TextField fx:id="searchField" promptText="Marca, Modelo o Placa" HBox.hgrow="ALWAYS" />
                </HBox>
                <TableView fx:id="vehiculosTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="padronColumn" text="Padrón" />
                        <TableColumn fx:id="marcaColumn" text="Marca" />
                        <TableColumn fx:id="modeloColumn" text="Modelo" />
                        <TableColumn fx:id="colorColumn" text="Color" />
                        <TableColumn fx:id="precioColumn" text="Precio" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Button text="Seleccionar" onAction="#handleSeleccionar" />
                    <Button fx:id="cancelarBtn" text="Cancelar" onAction="#handleCancelar" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
