<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" styleClass="mainFxmlClass" prefHeight="900.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ClientesController">
     <stylesheets>
             <URL value="@/CSS/VeiculosView.css" />
        <URL value="@/CSS/ClientesView.css" />
            <URL value="@/CSS/estilos.css" />
    </stylesheets>
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Gerenciador de Clientes" >
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                
                <HBox spacing="10.0">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Nome do Cliente:"  />
                                <TextField fx:id="nomeField" promptText="Ex: João da Silva" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Cédula (CI):" />
                                <TextField fx:id="cedulaField" promptText="Ex: 5.123.456-7" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                
                <Button fx:id="saveButton" maxWidth="1.7976931348623157E308" onAction="#handleSave" text="Salvar Novo Cliente" >
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                
                <TableView fx:id="clientesTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                        <TableColumn fx:id="nomeColumn" prefWidth="240.0" text="Nome" />
                        <TableColumn fx:id="cedulaColumn" prefWidth="140.0" text="Cédula" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                
                <Button fx:id="deleteButton" maxWidth="1.7976931348623157E308" onAction="#handleDelete" text="Deletar Cliente Selecionado">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
